{
    "name": "sahablibya/laravel-sharepoint-filesystem",
    "description": "SharePoint/OneDrive filesystem driver for Laravel using Microsoft Graph API with client credentials authentication",
    "type": "library",
    "license": ["MIT"],
    "keywords": [
        "laravel",
        "sharepoint",
        "onedrive",
        "filesystem",
        "flysystem",
        "microsoft-graph",
        "storage",
        "laravel-filesystem",
        "microsoft-365"
    ],
    "authors": [
        {
            "name": "SahabLibya Development Team",
            "email": "dev@sahablibya.ly"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3|^8.4",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/filesystem": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0",
        "league/flysystem": "^3.0",
        "guzzlehttp/psr7": "^2.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "pestphp/pest": "^2.0|^3.0",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "SahabLibya\\SharePointFilesystem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SahabLibya\\SharePointFilesystem\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "SahabLibya\\SharePointFilesystem\\SharePointFilesystemServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

